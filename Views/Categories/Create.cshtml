@model mvcdemo.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Category</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h2>Add Category</h2>
            <hr />
            <div class="form-group">
                Code 
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CatCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CatCode, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                Description
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CatDesc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CatDesc, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <p/>
                    <input type="submit" value="Add Category" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <h4>@ViewBag.Message</h4>
    <p/>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
